<%- include('partials/header') %>
<header>
  <div class="container">
    <h1>Add New Book</h1>
    <a href="/" class="btn">Kembali ke Beranda</a>
  </div>
</header>

<main>
  <form action="/new-books" method="POST">
    <!-- Input Judul Buku -->
    <div class="form-group">
      <label for="title">Judul Buku:</label>
      <input type="text" id="title" name="title" required />
    </div>

    <!-- Input Penulis -->
    <div class="form-group">
      <label for="author">Penulis:</label>
      <input type="text" id="author" name="author" required />
    </div>

    <!-- Input Rating -->
    <div class="form-group">
      <label for="rating">Rating (1-5):</label>
      <input type="number" id="rating" name="rating" min="1" max="5" />
    </div>

    <!-- Input Review -->
    <div class="form-group">
      <label for="review">Review:</label>
      <textarea id="review" name="review" rows="4"></textarea>
    </div>

    <!-- Input Tanggal Selesai Membaca -->
    <div class="form-group">
      <label for="finish_date">Tanggal Selesai Membaca:</label>
      <input type="date" id="finish_date" name="finish_date" />
    </div>

    <!-- Tombol Submit -->
    <div class="form-group">
      <button type="submit">Tambahkan Buku</button>
    </div>
  </form>
</main>
<%- include('partials/footer') %>
