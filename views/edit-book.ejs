<%- include('partials/header') %>
<header>
  <div class="container">
    <h1>My Book Tracker</h1>
    <nav>
      <a href="/" class="btn">Kembali ke Beranda</a>
    </nav>
  </div>
</header>

<main class="container">
  <h2>Edit Buku</h2>
  <form action="/books/update" method="POST">
    <!-- Input Judul Buku -->
    <input type="hidden" name="id" value="<%= book.id %>" />

    <div class="form-group">
      <label for="title">Judul Buku:</label>
      <input type="text" id="title" name="title" value="<%= book.title %>" placeholder="<%= book.title %>" required />
    </div>

    <!-- Input Penulis -->
    <div class="form-group">
      <label for="author">Penulis:</label>
      <input type="text" id="author" name="author" value="<%= book.author %>" required />
    </div>

    <!-- Input Rating -->
    <div class="form-group">
      <label for="rating">Rating (1-5):</label>
      <input type="number" id="rating" name="rating" min="1" max="5" value="<%= book.rating %>" />
    </div>

    <!-- Input Review -->
    <div class="form-group">
      <label for="review">Review:</label>
      <textarea id="review" name="review" rows="4"><%= book.review %></textarea>
    </div>

    <!-- Input Tanggal Selesai Membaca -->
    <div class="form-group">
      <label for="finish_date">Tanggal Selesai Membaca:</label>
      <input type="date" id="finish_date" name="finish_date" value="<%= book.finish_date ? book.finish_date.toISOString().split('T')[0] : '' %>" />
    </div>

    <!-- Tombol Aksi -->
    <div class="form-actions">
      <button type="submit" class="btn-save">Simpan Perubahan</button>
      <a href="/books/<%= book.id%>" class="btn-cancel">Batal</a>
    </div>
  </form>
</main>
<%- include('partials/footer') %>
